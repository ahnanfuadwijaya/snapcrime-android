<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".ui.home.HomeActivity">
    <LinearLayout
        android:background="@drawable/ic_launcher_grey_corner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_margin="24dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/SearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="31dp"
            android:paddingEnd="31dp"
            android:theme="@style/SearchBar"
            app:endIconDrawable="@drawable/ic_close"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="@color/black">

            <EditText
                android:background="@drawable/ic_launcher_corner_radius_white"
                android:id="@+id/caseSearch"
                style="@style/InitObj"
                android:hint="@string/search_hint"
                android:imeOptions="actionSearch"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCase"
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_row"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            style="@style/ExtendedFab"
            android:id="@+id/fab_create_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="32dp"
            android:text="@string/title_create_case_report"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_create"
            app:iconGravity="end"/>
    </FrameLayout>
</LinearLayout>