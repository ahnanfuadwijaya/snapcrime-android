<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SnapCrime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_grey_500</item>
        <item name="colorPrimaryVariant">@color/light_grey_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/dark_grey_200</item>
        <item name="colorSecondaryVariant">@color/dark_grey_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="statusBarBackground">@color/light_grey_200</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/light_grey_500</item>
        <item name="android:textColorHint">@color/light_grey_500</item>
        <item name="colorControlNormal">@color/light_grey_500</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>
    <style name="SplashBackground">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dark_grey_500</item>
    </style>
    <style name="SplashLogo">
        <item name="android:layout_height">@dimen/splash_logo_size</item>
        <item name="android:layout_width">@dimen/splash_logo_size</item>
        <item name="android:src">@drawable/ic_launcher_white</item>
    </style>
    <style name="Toolbar" parent="Theme.SnapCrime">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:itemTextAppearance">@style/MenuItem</item>
    </style>
    <style name="MenuItem">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="InitObj">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CornerRadius">
        <item name="background">@drawable/ic_launcher_corner_radius_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text" parent="InitObj">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Text.title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.title.upload">

    </style>

    <style name="Text.dec">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="UploadField">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Text.UploadCaption">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/light_grey_700</item>
    </style>

    <style name="SearchBar" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:radius">50dp</item>
        <item name="colorPrimary">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="SmallActionButton">
        <item name="android:layout_width">@dimen/small_button_action</item>
        <item name="android:layout_height">@dimen/small_button_action</item>
    </style>
    <style name="SmallActionButton.Black">
        <item name="android:tint">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="WideButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_custom_button</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:background">@color/white</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="AppbarTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/root_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomSheetTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="BottomSheetDivider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="OutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/light_grey_500</item>
    </style>
    <style name="TextInputEditText" parent="ThemeOverlay.AppCompat">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayExtended</item>
        <item name="backgroundTint">@color/black</item>
    </style>
</resources>